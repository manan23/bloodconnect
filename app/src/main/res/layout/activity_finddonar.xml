<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.bloodconnect.activity.FindDonarActivity">
  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2">
      <android.support.design.widget.TextInputLayout
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="fill_parent">
          <Spinner
              android:id="@+id/fbloodgroup"
              android:text="Blood Group"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content">
          <EditText
              android:maxLines="1"
              android:singleLine="true"
              android:inputType="number"
              android:id="@+id/fbloodunit"
              android:hint="Blood Unit"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
      </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <TextView

        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ffname"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/flname"
                android:inputType="textCapWords"
                android:hint="Last Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/fnumber"
                android:inputType="number"
                android:hint="Contact Number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:text="Near By Hospital Address"
        android:layout_height="wrap_content"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/faddress"
                android:autofillHints="Hospital Address"
                android:layout_width="match_parent"
                android:inputType="textCapWords"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
                android:background="@color/colorwhite"
                android:id="@+id/fneeddate"
                android:hint="Need Date"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/fsubmit"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorwhite"
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
