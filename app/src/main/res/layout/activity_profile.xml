<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    tools:context="com.example.user.bloodconnect.activity.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_400"
            android:orientation="vertical"
            tools:context="com.example.user.bloodconnect.activity.ProfileActivity">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:padding="10sp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/profileimage"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Fname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Name:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profilename"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_wc_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Gender:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profilegender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:padding="20dp"

                        android:paddingRight="20dp"
                        android:text="Gender"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Date Of Birth:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profiledob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:inputType="none"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:text="dob"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Bloodgrp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_invert_colors_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Blood Group:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profilebloodgroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:padding="20dp"
                        android:text="BG"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_call_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Mobile No.:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profilenumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_home_black_24dp"
                        android:editable="false"
                        android:elevation="4dp"
                        android:gravity="end"
                        android:paddingBottom="14dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="23dp"
                        android:text="Address:-"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/profilecity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.8"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>
                <Button
                    android:id="@+id/Update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/red_500"
                    android:text="Update"
                    android:textColor="@color/colorwhite"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>

