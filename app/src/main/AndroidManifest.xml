<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.bloodconnect">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FindDonarActivity"
            android:label="Find Donar"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme1" />
        <activity android:name=".activity.FeedbackFormActivity"
            android:theme="@style/AppTheme1"/>
        <activity android:name=".activity.AcceptActivity"
             android:theme="@style/AppTheme1"/>
        <activity android:name=".activity.NotifyActivity" />
        <activity android:name=".activity.AccepterActivity"></activity>
    </application>

</manifest>